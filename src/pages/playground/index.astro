---
import { type AstroPlaygroundPage } from "src/scripts/models.ts";
import MainLayout from "src/Layouts/MainLayout.astro";

// Astro.glob does not include the calling file
const playground_pages: AstroPlaygroundPage[] = (await Astro.glob("./*.astro")) as AstroPlaygroundPage[];
---

<MainLayout title="playground">
	<div class="main-div">
		<h1>What is this page?</h1>
		<p>
			this is a page containing some random stuff I used to have on my
			website
		</p>
		<hr />
		{
			playground_pages
				.sort((page1, page2) => {
					//@ts-ignore
					return page1.creation_date - page2.creation_date;
				})
				.map((value) => {
					return (
						<div class="row-div">
							<a href={value.url}>{value.title}</a>
							<span>
								{value.creation_date.toLocaleDateString()}
							</span>
						</div>
					);
				})
		}
	</div>
</MainLayout>

<style lang="scss">
	@import "src/styles/global";
	// .main-div {
	// 	padding: 1rem $side_padding;
	// }

	.row-div {
		display: flex;
		justify-content: space-between;
	}
</style>
