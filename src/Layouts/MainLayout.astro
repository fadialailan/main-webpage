---
import UnstyledBaseLayout from "./UnstyledBaseLayout.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<UnstyledBaseLayout
	title={title}
	main_slot_class="base-layout-class"
	class="page-class"
	navbar_class="navbar-class"
>
	<slot />
</UnstyledBaseLayout>

<style lang="scss">
	$side-padding: clamp(1rem, calc((100vw - 60rem) / 2), 30vw);

	.base-layout-class {
		padding: 0rem $side-padding;
	}
	.page-class {
		background: #fdebf3;
	}

	.navbar-class {
		// box-shadow: 0px 3px 5px lightgrey;
		border-bottom: 1px solid lightgrey;
	}
</style>
